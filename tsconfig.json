{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./out",
    "rootDir": "./src",
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
        "~/*": ["./*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
